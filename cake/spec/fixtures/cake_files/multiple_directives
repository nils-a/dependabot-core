#module nuget:?package=Cake.Module&version=0.1.0
#addin nuget:?package=Cake.Addin&version=1.2.0
#tool nuget:?package=Cake.Tool&version=2.0.1

var target = Argument("target", "Default");
var configuration = Argument("configuration", "Release");

var buildDir = Directory("./src/Example/bin") + Directory(configuration);

Task("Message")
    .Does(() =>
{
  Information("Very simple cake script");
});

Task("Default").IsDependentOn("Message");

RunTarget(target);
